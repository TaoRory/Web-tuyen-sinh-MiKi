<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="miki_other_situation_form_view" model="ir.ui.view">
            <field name="name">miki.miki_other_situation.form</field>
            <field name="model">miki.other.situation</field>
            <field name="arch" type="xml">
                <form string="Other Situation">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="miki_other_situation_tree_view" model="ir.ui.view">
            <field name="name">miki.miki_other_situation.tree</field>
            <field name="model">miki.other.situation</field>
            <field name="arch" type="xml">
                <tree string="Other Situation" create="1" editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="miki_other_situation_search_view" model="ir.ui.view">
            <field name="name">miki.miki_other_situation.search</field>
            <field name="model">miki.other.situation</field>
            <field name="arch" type="xml">
                <search string="Other Situation">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="miki_other_situation_act_window" model="ir.actions.act_window">
            <field name="name">Other Situation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">miki.other.situation</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Other Situation.
                </p>
            </field>
        </record>

        <menuitem name="Other Situation" id="miki_other_situation_menu"  action="miki_other_situation_act_window"/>

    </data>
</odoo>